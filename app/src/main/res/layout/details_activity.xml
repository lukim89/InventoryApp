<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="name" />

    <TextView tools:text="price"
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView tools:text="quantity"
        android:id="@+id/product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView tools:text="description"
        android:id="@+id/product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView tools:text="supplier name"
        android:id="@+id/product_supplier_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView tools:text="@tools:sample/us_phones"
        android:id="@+id/product_supplier_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>